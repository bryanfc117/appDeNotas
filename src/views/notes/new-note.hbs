
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
          <h3>Nueva Nota</h3>
         </div>
    <div class="card-body">
        <form action="/notes/new-note" method="POST">
            <div class="form-group">
                <input type="text" name="titulo" placeholder="Titulo" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <textarea name="descripcion" class="form-control" placeholder="Descripcion"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-secondary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>